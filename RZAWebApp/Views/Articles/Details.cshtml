@model RZAWebApp.Models.Articles

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div id="page-container">
    <div id="content-wrap">
    <h4>Articles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            <h2>@Html.DisplayFor(model => model.ArticleTitle)</h2>
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WrittenBy)
        <dt class="col-sm-2">
                Publication Date
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
        </dd>
        </dd>
        <dt class = "col-sm-2">
            Content
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArticleContent)
        </dd>

            <dt class="col-sm-2">
            </dt>
            <dd class="col-sm-10">
                <img src="/media/images/articles/@(Html.DisplayFor(model => model.ImageID)).jpg" />
            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tags)
        </dd>
    </dl>

<div>
    @if (User.IsInRole("Admin") || (User.IsInRole("Writer")))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ArticleID">Edit | </a> 
    }
    
    <a asp-action="Index">Back to List</a>
</div>

    </div>
</div>
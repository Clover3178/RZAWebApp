@model RZAWebApp.Models.Bookings

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Html.DisplayNameFor(model => model.UserID) == User.Identity?.Name)
{

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Bookings</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.UserID)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.UserID)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ZooBooked)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ZooBooked)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ZooDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ZooDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HotelBooked)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HotelBooked)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HotelDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HotelDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HotelRoomType)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HotelRoomType)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HotelBookedUntil)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HotelBookedUntil)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BookingID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}

else
{
    <h1>Access Denied</h1>
    <p>Please log in to the account associated with this booking to access this page.</p>
}
@model IEnumerable<RZAWebApp.Models.Bookings>

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table" id="IndexTable">
    <thead>
        <tr>
            <th>
                Booking ID
            </th>
            <th>
                User ID
            </th>
            <th>
                Zoo Visit Booked?
            </th>
            <th>
                Zoo Visit Date
            </th>
            <th>
                Hotel Visit Booked?
            </th>
            <th>
                Hotel Check-In Date
            </th>
            <th>
                Hotel Room Type
            </th>
            <th>
                Hotel Check-Out Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(modelItem => modelItem.UserID == @User.Identity?.Name)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZooBooked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZooDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelBooked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelRoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelBookedUntil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
